<div class="col-md4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Editar Carro</h3>
        </div>
        <div class="card-body">
            <form action="/cars/edit/{{car.[0]._id}}?_method=PUT" method="POST" enctype="multipart/form-data">
                <input type="hidden" name="_method" value="PUT"/>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="text" name="idPlaca" class="form-control" placeholder="NÃºmero Placa *" value="{{car.[0].idPlaca}}" autofocus required>
                        </div>
                        <div class="form-group">
                            <input type="text" name="nombreCarro" class="form-control" placeholder="Nombre Carro *" value="{{car.[0].nombreCarro}}" required>
                        </div>
                        <div class="form-group">
                            <select class="form-control" name="marcaCarro" require>
                                <option value="{{car.[0].brand.[0].idMarca}}" selected disabled>{{car.[0].brand.[0].nombreMarca}}</option>
                                {{#each brands}}
                                    <option value={{idMarca}}>{{nombreMarca}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="form-group">
                            <input type="number" name="modeloCarro" class="form-control" placeholder="Modelo Carro *" value="{{car.[0].modeloCarro}}" required>
                        </div>
                        <div class="form-group">
                            <input type="text" name="colorCarro" class="form-control" placeholder="Color Carro *" value="{{car.[0].colorCarro}}" required>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="number" name="valorCarro" class="form-control" placeholder="Valor Carro $USD *" value="{{car.[0].valorCarro}}" required>
                        </div>
                        <div class="form-group">
                            <select class="form-control" name="pais" required>
                                <option value="{{car.[0].country.[0].idPais}}" selected disabled>{{car.[0].country.[0].nombrePais}}</option>
                                {{#each countries}}
                                    <option value={{idPais}}>{{nombrePais}}</option>
                                {{/each}}
                            </select>   
                        </div>
                        <div class="row">
                            <div class="col-md-7">
                               <div class="form-group">
                                    <input type="file" name="imagenCarro" class="form-control">
                                </div>
                            </div>
                            <div class="col-md-5">
                                <div style="text-align: center;">
                                    <img 
                                        src="../../../uploadImages/{{car.[0].imagenCarro}}"
                                        alt="image Car"
                                        height="170"
                                        width="170" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">
                        Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>