<div class="col-md4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h4>Registrar Carro</h4>
        </div>
        <div class="card-body">
            <form action="/cars/new-car" method="POST" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="text" name="idPlaca" class="form-control" placeholder="NÃºmero Placa *" value="{{idPlaca}}" autofocus required>
                        </div>
                        <div class="form-group">
                            <input type="text" name="nombreCarro" class="form-control" placeholder="Nombre Carro *" value="{{nombreCarro}}" required>
                        </div>
                        <div class="form-group">
                            <select class="form-control" name="marcaCarro" required>
                                {{#if marcaCarro}}
                                    <option value="{{marcaCarro}}" selected >{{nameBrand}}</option>
                                {{else }}
                                    <option value="" selected disabled hidden>Marca Carro *</option>
                                {{/if}}
                                {{#each brands}}
                                    <option value={{idMarca}}>{{nombreMarca}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="form-group">
                            <input type="number" name="modeloCarro" class="form-control" placeholder="Modelo Carro *" value="{{modeloCarro}}" required>
                        </div>
                        <div class="form-group">
                            <input type="text" name="colorCarro" class="form-control" placeholder="Color Carro *" value="{{colorCarro}}" required>
                        </div>                       
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="number" name="valorCarro" class="form-control" placeholder="Valor Carro $USD *" value="{{valorCarro}}" required>
                        </div>
                        <div class="form-group">
                            <select class="form-control" name="pais" required>
                                <option value="" selected disabled>Pais *</option>
                                {{#if pais}}
                                    <option value="{{pais}}" selected >{{nameCountry}}</option>
                                {{/if}}
                                {{#each countries}}
                                    <option value={{idPais}}>{{nombrePais}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="row">
                            <div class="col-md-7">
                                <div class="form-group">
                                    <input type="file" title="Sube una imagen de tu carro" name="imagenCarro" class="form-control" required>
                                </div> 
                            </div>
                            <div class="col-md-5">
                                <div>
                                    <img 
                                        src="../../../example.jpg"
                                        alt="image Car"
                                        height="170"
                                        width="200" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">
                        Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>